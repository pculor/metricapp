{
  "name": "metricapp",
  "version": "1.0.0",
  "description": "metric logger application",
  "main": "index.js",
  "scripts": {
    "build": "rimraf bin && tsc",
    "test": "NODE_ENV=test jest --detectOpenHandles --coverage --runInBand --forceExit",
    "prestart": "concurrently \"npm run build\" \"npm run client\"",
    "start": "cross-env NODE_ENV=production node bin/app.js",
    "preserver": "npm run build",
    "server": "cross-env NODE_ENV=development concurrently \"tsc --watch\" \"nodemon --exec node bin/app.js\"",
    "client": "cd client && npm install && npm run build",
    "client:dev": "cd client && npm install && npm start",
    "start:dev": "concurrently \"npm run server\" \"npm run client:dev\"",
    "lint": "eslint --fix server/",
    "format": "npx prettier --write ."
  },
  "author": "Pascal Ulor",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@hapi/joi-date": "^2.0.1",
    "@influxdata/influxdb-client": "^1.21.0",
    "@influxdata/influxdb-client-apis": "^1.21.0",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.9",
    "app-root-path": "^3.0.0",
    "concurrently": "^7.0.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^14.1.0",
    "express": "^4.17.2",
    "helmet": "^5.0.1",
    "morgan": "^1.10.0",
    "request-response-handler": "^1.0.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.1",
    "typescript": "^4.5.4",
    "winston": "^3.4.0"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/cors": "^2.8.12",
    "@types/jest": "^27.4.0",
    "@types/morgan": "^1.9.3",
    "@types/supertest": "^2.0.11",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules",
      "dist"
    ],
    "exec": "npm run server",
    "watch": [
      "server/*"
    ],
    "ext": "js, json, ts"
  }
}
